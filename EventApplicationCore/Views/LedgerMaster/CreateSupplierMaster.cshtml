@model LedgerMaster
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" enctype="multipart/form-data" asp-controller="LedgerMaster" asp-action="Create">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Create Supplier Master</h3>
        </div>
        <div class="panel-body">

            <div class="col-xs-2">
                <div class="form-group">
                    <label class="control-label" asp-for="LedgerMasterId">Code</label>
                    <input asp-for="LedgerMasterId" type="text" class="form-control" readonly="readonly" />
                    <span asp-validation-for="LedgerMasterId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="LedgerMasterName">Supplier Name</label>
                    <input asp-for="LedgerMasterName" autofocus="autofocus" type="text" class="form-control" />
                    <span asp-validation-for="LedgerMasterName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="Division">Division</label>
                    <input asp-for="Division" type="text" class="form-control" />
                    <span asp-validation-for="Division" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="MarginPercentage">Division</label>
                    <input asp-for="MarginPercentage" type="number" class="form-control" />
                    <span asp-validation-for="MarginPercentage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="SubGroupId" value="1" hidden="hidden" />
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="LedgerMasterDescription">Description</label>
                    <textarea asp-for="LedgerMasterDescription" type="text" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="LedgerMasterDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="Address">Address</label>
                    <input asp-for="Address" type="text" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="City">City</label>
                    <input asp-for="City" type="text" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="LedgerMasterType" type="text" value="1" hidden="hidden" />
                </div>
            </div>
            <div class="col-xs-2">

                <div class="form-group">
                    <label class="control-label" asp-for="State">State</label>
                    <input asp-for="State" type="text" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="PinCode">PinCode</label>
                    <input asp-for="PinCode" type="number" class="form-control" />
                    <span asp-validation-for="PinCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="MobileNumber">MobileNumber</label>
                    <input asp-for="MobileNumber" type="text" class="form-control" />
                    <span asp-validation-for="MobileNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="EmailId">EmailId</label>
                    <input asp-for="EmailId" type="text" class="form-control" />
                    <span asp-validation-for="EmailId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="GSTNumber">GSTNumber</label>
                    <input asp-for="GSTNumber" type="text" class="form-control" />
                    <span asp-validation-for="GSTNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="PANNumber">PANNumber</label>
                    <input asp-for="PANNumber" type="text" class="form-control" />
                    <span asp-validation-for="PANNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="Debit">Debit</label>
                    <input asp-for="Debit" type="text" class="form-control" />
                    <span asp-validation-for="Debit" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="Credit">Credit</label>
                    <input asp-for="Credit" type="text" class="form-control" />
                    <span asp-validation-for="Credit" class="text-danger"></span>
                </div>
            </div>
            <div class="col-xs-8">

                <table id="dataLedgerItemMaster" class="table table-striped table-bordered dt-responsive nowrap" style="font-size:14px" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Barcode</th>
                            <th>Item <br />Name</th>
                            <th>Category Name   </th>
                            <th>Purchase <br /> Rate</th>
                            <th>Maximum <br /> Retail Price</th>
                            <th>Select</th>
                        </tr>
                    </thead>
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th>
                                <input type="text" id="CategorySearch" class="form-control" />
                            </th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var itemMaster in ViewBag.LedgerItemMaster as IQueryable<LedgerItemMaster>)
                        {
                            <tr>
                                <td>@itemMaster.BarCode</td>
                                <td>@itemMaster.ItemMasterName</td>
                                <td>@itemMaster.CategoryName</td>
                                <td>
                                    <input type="text" class="form-control" value="@itemMaster.PurchaseRate" />
                                </td>
                                <td>
                                    <input type="text" value="@itemMaster.MaximumRetailPrice" class="form-control" />
                                </td>
                                <td>
                                    <input type="checkbox" class="form-control" id="@itemMaster.ItemMasterId" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="panel-footer">
            <input id="Submit" type="submit" accesskey="s" class="btn btn-success" value="Save (Alt+S)" />
            <a asp-action="List" asp-route-id="1" accesskey="l" class="btn btn-primary">Show All (Alt+L)</a>
        </div>
    </div>
</form>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<script type="text/javascript">

    $(document).ready(function () {
        $("#containerDiv").removeClass('container')

        var dataTable = $('#dataLedgerItemMaster').DataTable({
            "scrollY": true,
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]]
        });

        $('#CategorySearch').keyup(function () {

            dataTable
                .column(2)
                .search(this.value)
                .draw();

        });
        $('.dataTables_length').addClass('bs-select');

    });
</script>
<style type="text/css">
    #dataLedgerItemMaster td {
        padding: 2px;
    }
</style>