@model IEnumerable<Unit>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Unit</h3>
    </div>
    <div class="panel-body">
        <table id="dataTableList" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>UnitID</th>
                    <th>UnitName</th>
                    <th>CreateDate</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var unit in Model)
                {
                    <tr>
                        <td>@unit.UnitId</td>
                        <td>@unit.UnitName</td>
                        <td>@unit.CreateDate</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@unit.UnitId" class="btn btn-primary">Edit</a>
                        </td>
                        <td>
                            <form method="post" asp-action="Delete" asp-route-id="@unit.UnitId">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure want to delete?')">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @await Component.InvokeAsync("ListFooter")
</div>

@await Component.InvokeAsync("DataTableScripts")