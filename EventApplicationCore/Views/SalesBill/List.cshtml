@model IEnumerable<SalesBill>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Item Master</h3>
    </div>
    <div class="panel-body">

        <table id="dataTableList" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%" cellspacing="0">
            <thead>
                <tr>
                    <th>SalesBill Id</th>
                    <th>PaymentMode</th>
                    <th>Bill Date</th>
                    <th>Lorry NO</th>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>Consignor</td>
                    <td>Consignee</td>
                    <td>Transport</td>
                    <td>Dispatch</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var salesBill in Model)
                {
                    <tr>
                        <td>@salesBill.SalesBillId</td>
                        <td>@salesBill.PaymentMode</td>
                        <td>@salesBill.SalesBillDate.Value.ToString("dd/MM/yyyy")</td>
                        <td>@salesBill.LorryNo</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@salesBill.SalesBillId" class="btn btn-primary">Edit</a>
                        </td>
                        <td>
                            <form method="post" asp-action="Delete" asp-route-id="@salesBill.SalesBillId">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure want to delete?')">
                                    Delete
                                </button>
                            </form>
                        </td>
                        <td>
                            <form method="post" asp-action="Print" target="_blank" asp-route-id="@salesBill.SalesBillId">

                                <button asp-action="Print" asp-route-id="@salesBill.SalesBillId" type="submit" class="btn btn-info">
                                    Print
                                </button>
                            </form>
                        </td>
                        <td>
                            <input type="checkbox" id="Consignor" />
                        </td>
                        <td>
                            <input type="checkbox" id="Consignee" />
                        </td>
                        <td>
                            <input type="checkbox" id="Transport" />
                        </td>
                        <td>
                            <input type="checkbox" id="Dispatch" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @await Component.InvokeAsync("ListFooter")
</div>

@await Component.InvokeAsync("DataTableScripts")

<script>

    $(document).ready(function () {
        $("#containerDiv").removeClass('container')
    });

    function Print(id, type) {

    }
</script>