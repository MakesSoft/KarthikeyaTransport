@model Group
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["GroupMessage"] != null)
{
    <p class="alert alert-success" id="successMessage">@TempData["GroupMessage"]</p>
}
<form method="post" enctype="multipart/form-data" asp-controller="Group" asp-action="Create">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Create Group</h3>
        </div>
        <div class="panel-body">

            <div class="col-xs-offset-0 col-xs-4">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <div class="form-group">
                    <label class="control-label" asp-for="GroupName">Group Name</label>
                    <input asp-for="GroupName" type="text" autofocus="autofocus" class="form-control" />
                    <span asp-validation-for="GroupName" class="text-danger"></span>
                </div>
            </div>
        </div>
        @await Component.InvokeAsync("DivElement")
    </div>
</form>