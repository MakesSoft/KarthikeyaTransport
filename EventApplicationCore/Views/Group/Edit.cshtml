@model Group
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["GroupUpdateMessage"] != null)
{
    <p class="alert alert-success" id="successMessage">@TempData["GroupUpdateMessage"]</p>
}
<form method="post" enctype="multipart/form-data" asp-controller="Group" asp-action="Edit">
    <div class="panel panel-primary">

        <div class="panel-heading">
            <h3 class="panel-title">Edit Group</h3>
        </div>
        <div class="panel-body">
            <input asp-for="GroupId" type="hidden" />
            <div class="col-xs-offset-0 col-xs-4">
                <input asp-for="GroupId" type="hidden" />
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <div class="form-group">
                    <label class="control-label" asp-for="GroupName">Group Name</label>
                    <input asp-for="GroupName" type="text" autofocus="autofocus" class="form-control" />
                    <span asp-validation-for="GroupName" class="text-danger"></span>
                </div>
            </div>
        </div>
        @await Component.InvokeAsync("DivElement")
    </div>
</form>