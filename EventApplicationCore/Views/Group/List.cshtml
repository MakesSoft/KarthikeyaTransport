@model IEnumerable<Group>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Group</h3>
    </div>
    <div class="panel-body">
        <table id="dataTableList" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
            <thead>
                <tr>
                    <th>GroupID</th>
                    <th>GroupName</th>
                    <th>CreateDate</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var group in Model)
                {
                    <tr>
                        <td>@group.GroupId</td>
                        <td>@group.GroupName</td>
                        <td>@group.CreateDate</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@group.GroupId" class="btn btn-primary">Edit</a>
                        </td>
                        <td>
                            <form method="post" asp-action="Delete" asp-route-id="@group.GroupId">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure want to delete?')">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @await Component.InvokeAsync("ListFooter")
</div>

@await Component.InvokeAsync("DataTableScripts")